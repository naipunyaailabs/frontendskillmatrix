# MinIO Configuration (replaces AWS S3)
# For local development (non-secure)
# MINIO_ENDPOINT=localhost:9000
# MINIO_SECURE=false

# For production (secure HTTPS)
MINIO_ENDPOINT=storage.docapture.com
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=skillmatrix-bucket
MINIO_REGION=us-east-1
MINIO_SECURE=true

# Database Configuration
MONGO_URI=mongodb://localhost:27017/skillmatrix

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_USER=your-email@gmail.com

# Admin Configuration
ADMIN_EMAIL=admin@skillmatrix.com
ADMIN_PASSWORD=admin@123
ADMIN_FULLNAME=Admin User
ADMIN_MOBILE=0000000000
ADMIN_COMPANY=SkillMatrix AI
ADMIN_DESIGNATION=Admin

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001
PORT=3001

# External AI API URLs (configure as needed)
RESUME_JD_MATCHING=http://your-ai-service/match
MCQ_GENERATION_API=http://your-ai-service/generate-mcq
VOICE_GENERATION_API=http://your-ai-service/generate-voice
AUDIO_EVALUATION_API_URL=http://your-ai-service/evaluate-audio
VIDEO_EVALUATION_API_URL=http://your-ai-service/evaluate-video
TEXT_EVALUATION_API_URL=http://your-ai-service/evaluate-text
WHISPER_API_URL=http://your-ai-service/whisper

# Security
BLOCKED_DOMAINS=gmail.com,yahoo.com,hotmail.com,outlook.com

# MinIO Specific Settings
MINIO_JD_FOLDER=jobposting-jd-files
WHISPER_TIMEOUT=60000